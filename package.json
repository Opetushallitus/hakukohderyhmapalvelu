{
  "scripts": {
    "cypress:open": "cypress open -C oph-configuration/cypress.local-environment.json",
    "cypress:open:travis": "cypress open -C oph-configuration/cypress.travis.json",
    "cypress:run:local-environment": "cypress run -C oph-configuration/cypress.local-environment.json --browser chrome --headless",
    "cypress:run:travis": "cypress run -C oph-configuration/cypress.travis.json --browser chrome --headless",
    "lint:clj": "clj-kondo --config oph-configuration/clj-kondo.config.edn --lint src",
    "lint:clj:lint-staged": "clj-kondo --config oph-configuration/clj-kondo.config.edn --lint",
    "lint:js": "eslint --ignore-path \".eslintignore\" --ext .js,.ts \"cypress\""
  },
  "husky": {
    "hooks": {
      "pre-push": "lint-prepush"
    }
  },
  "lint-staged": {
    "cypress/**/*.{js,ts}": [
      "npm run lint:js"
    ],
    "src/**/*.{clj,cljs,cljc}": [
      "npm run lint:clj:lint-staged"
    ]
  },
  "lint-prepush": {
    "base": "master",
    "tasks": {
      "cypress/**/*.{js,ts}": [
        "npm run lint:js"
      ],
      "src/**/*.{clj,cljs,cljc}": [
        "npm run lint:clj:lint-staged"
      ]
    }
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "2.26.0",
    "@typescript-eslint/parser": "2.26.0",
    "@types/mocha": "7.0.2",
    "clj-kondo": "2020.1.13",
    "cypress": "4.3.0",
    "eslint": "6.8.0",
    "eslint-config-airbnb-base": "14.1.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-plugin-cypress": "2.10.3",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-prettier": "3.1.2",
    "husky": "4.2.3",
    "lint-staged": "10.1.0",
    "lint-prepush": "1.2.0",
    "prettier": "2.0.2",
    "shadow-cljs": "2.8.94",
    "ts-loader": "6.2.2",
    "typescript": "3.8.3",
    "webpack": "4.42.1"
  },
  "dependencies": {
    "@cypress/webpack-preprocessor": "4.1.3",
    "highlight.js": "9.18.1",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-highlight.js": "1.0.7"
  }
}
